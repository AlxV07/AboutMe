# === .bashrc ===

set -o vi

alias "gp"="git push"
alias "gc"="git commit"
alias "ga"="git add"
alias "gs"="git status"

alias "~"="cd ~"
alias ".."="cd .."
alias "..."="cd ../.."
alias "ls"="ls --color=always"
alias "l"="ls -lah"
alias "pgbreak"="echo \"\n\n\n\""

